{
  "title": "Yabai",
  "rules": [
    {
      "description": "Fullscreen",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": [
                "left_alt",
                "right_alt"
              ]
            },
            "key_code": "f"
          }
        }
      ]
    },
    {
      "description": "CAPS LOCK + m n for space swap",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus next"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus prev"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
{
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --layout bsp"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        },
{
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --layout float"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock pressed",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
